extends layout

block content
  .row.page-header
    .col-lg-12
      h1= pageHeader.title
  .row
    .col-xs-12.col-md-6
      form.form-horizontal(id="addExerciseForm", action="", method="post", role="form")
        -if(error == "val")
          .alert.alert-danger(role="alert") All fields required, please try again
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="name") Name
          .col-xs-12.col-sm-10
            input#name.form-control(name="name")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="repstime") Reps/time
          .col-xs-12.col-sm-2
            input#repstime.form-control(name="repstime")
        .form-group
          label.col-xs-10.col-sm-2.control-label(for="sets") Sets
          .col-xs-12.col-sm-2
            input#sets.form-control(name="sets")
        .form-group
          label.col-sm-2.control-label(for="description") Description
          .col-sm-10
            textarea#review.form-control(name="description", rows="5")
        button.btn.btn-default.pull-right Add my exercise
    .col-xs-12.col-md-4